@model And.Eticaret.UI.Web.Models.Sınıflar.Order
@{
    ViewBag.Title = "Sipariş Detayı";
}

<h2>@Model.ID Nolu Sipariş Durumu:@Model.Status.Name </h2>
<hr />

<b>Banka Bilgileri</b>

<table>
    <tr>
        <td>Banka</td>
        <td>Banka İsmi</td>
    </tr>
    <tr>
        <td>İban</td>
        <td>TR09823763189</td>
    </tr>
    <tr>
        <td>Alıcı Adı</td>
        <td>Firma Bilgileri</td>
    </tr>
</table>

@{ 
    if(Model.StatusID==2)
            {
                <a href="#" class="btn btn-success">Ödeme Yaptım</a>

            }



}

<b>Sipariş Bilgileri</b>

<table>
    <tr>
        <td>Toplam</td>
        <td>@Model.TotalPrice.ToString("##,## TL")</td>
    </tr>
    <tr>
        <td>Ürünler Toplamı</td>
        <td>@Model.TotalProductPrice.ToString("##,## TL")</td>
    </tr>

</table>


<b>Ürünler</b>

<table>
    <tr>
        <td>Ürün</td>
        <td>Adet</td>
    </tr>
  @{ 
      foreach(var item in Model.OrderProducts)
            {
              <tr>
                  <td>@item.Product.Name</td>
                  <td>@item.Quantity</td>
              </tr>

            }
  }

</table>


