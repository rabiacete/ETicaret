
@model List<And.Eticaret.UI.Web.Models.Sınıflar.Product>
@{
    ViewBag.Title = "İndex";
    var category = (And.Eticaret.UI.Web.Models.Sınıflar.Category)ViewBag.category;
}



<h3>ෆ @category.Name  KATEGORİSİ ෆ</h3>

@{
    foreach (var item in Model)
    {

        <div class="productBox">
            <p class="title">@item.Name</p>

            <img src="@item.ImageUrl" />

            <p>
                @item.Brand
            </p>
            <p>
                @item.Price.ToString("##,## ₺")
            </p>


            <p>
                @item.Description
            </p>

            <a href="/Urun/@item.Name.Replace(" ","-")/@item.ID" class="btn btn-success">İncele</a>
            <a href="#" class="btn btn-default"><i class="icon-next"></i>Sepete At</a>






        </div>


    }

}


<div class="row"></div>

<style>

    .productBox {
        width: 200px;
        float: left;
        margin: 10px;
        border: 2px solid #b9b9b9;
        padding: 10px;
    }

        .productBox img {
            width: 100%;
        }

        .productBox .title {
            font-weight: bold;
            text-align: center;
        }

        .productBox p {
            text-align: center;
        }
</style>
